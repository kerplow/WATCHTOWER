<div class="main-container">
  <div class="split-new">
    <div class="form-wrapper watch-form d-flex">
      <%= simple_form_for @watch, url: my_watches_url do |f| %>
      <div class="centered">
        <h3> Upload your watch </h3>
        <div class="form">
          <div class="form-row">
            <%= f.input :watch_brand, wrapper_html: {class: "col-md-3"} %>
            <%= f.input :watch_model, wrapper_html: {class: "col-md-3"} %>
            <%= f.input :watch_category, as: :select, collection: ["Mechanical", "Quartz", "Slim", "Sports", "Titanium"], wrapper_html: {class: "col-md-3"} %>
          </div>

          <div>
            <div class="form-row">
              <%= f.input :address, as: :select, collection: ["Basel", "Davos", "Geneva", "Lausanne", "Lugano", "NeuchÃ¢tel", "Schwyz", "St. Gallen", "St. Moritz", "Thun", "Winterthur", "Yverdon-les-Bains", "Zermatt", "Zug", "Zurich"], wrapper_html: {class: "col-md-5"} %>
                <%= f.input :gender, as: :select, collection: ["Female", "Male", "Coder"], wrapper_html: {class: "col-md-4"} %>
              </div>
            </div>
          </div>
          <div class="form-row">
            <%= f.input :rental_price, wrapper_html: {class: "col-md-5"} %>
            <%= f.input :retail_price, wrapper_html: {class: "col-md-4"} %>
          </div>
          <div class="form-row">
            <%= f.input :availability_start, label: "Availability", as: :string, input_html: {class: "datepicker"}, wrapper_html: {class: "col-md-9"} %>
          </div>
          <div>
            <%= f.input :watch_image, wrapper_html: {class: "col-md-9"} , name: "klik"%>
            <%= f.input :watch_image_cache, as: :hidden %>
          </div>
        </div>
        <%= f.button :submit, "Create", class: "btn btn-primary"%>
        <%= link_to "Cancel ", root_path, class: "navlink"  %>
      </div>
      <% end %>
    </div>
  </div>
</div>
