<div class="main-container">
  <h1 class="watches-header">Browse watches</h1>
  <div class="cards-index">
    <% @watches.each do |watch| %>
    <div class="card-product-index">
      <%= cl_image_tag watch.watch_image, width: 200, crop: :fill %>
      <div class="card-product-infos-index">
        <h2><%= link_to watch.watch_brand, watch_path(watch)%></h2>
        <p><%= watch.watch_model %></p>
        <p><%= watch.watch_category %></p>
        <p><%= watch.rental_price %> â‚¬ per day</p>
      </div>
    </div>
    <% end %>
  </div>
  <div class="map-container">
    <div
    id="map"
    style="width: 100%;
    height: 500px;
    align-items: center;
    padding-right: 30px;
    padding-right: 30px;"
    data-markers="<%= @markers.to_json %>"
    data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>"
    >
    </div>
  </div>
</div>
