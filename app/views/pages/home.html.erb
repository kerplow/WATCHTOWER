

<div class="banner banner-homepage" style="background-image: url(https://images.pexels.com/photos/129843/pexels-photo-129843.jpeg?auto=compress&cs=tinysrgb&dpr=2&h=750&w=1260);">
  <div class="split">
    <div class="form-wrapper">
      <%= simple_form_for :search, url: watches_path, method: :get do |f| %>
      <div class="centered">
        <h3> Look for your new watch! </h3>
        <div>
          <div class="form-row">
            <div class="form-group">
              <label for="inputCity">City</label>
              <div>
              <select> name="search[city]" id="inputCity" class="form-control">
              <option selected>Select</option>
              <option>Geneva</option>
              <option>Lausanne</option>
              <option>Zermatt</option>
              <option>Basel</option>
              <option>Zurich</option>
              <option>Zug</option>
              <option>Schwyz</option>
              <option>Davos</option>
              <option>St. Moritz</option>
              <option>Lugano</option>
              <option>Thun</option>
              <option>Neuch√¢tel</option>
              <option>Winterthur</option>
              <option>St. Gallen</option>
              <option>Yverdon-les-Bains</option>
              </select>
            </div>
            </div>
            <div class="form-group">
              <label for="inputGender">Gender</label>
              <select name="search[gender]" id="inputGender" class="form-control">
                <option selected>Select</option>
                <option>Female</option>
                <option>Male</option>
                <option>Other</option>
              </select>
            </div>
            <div class="alignment">
            <%= f.input :from, as: :string, required: false, label: "From", input_html: {class: "datepicker"} %>
            <%= f.button :submit, "Explore", class: "btn btn-primary" %>
            </div>
          </div>
        </div>
      </div>
      <% end %>
    </div>
  </div>

  <div class="split container-slogan" style="height:400px;">
    <div class="centered">
      <h1><strong>Not On Our Watch..</strong></h1>
      <p>Finally wear the watch you have always wanted! </p>
    </div>
  </div>
</div>


