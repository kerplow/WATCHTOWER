  <div class="midpage">
    <h2 class="text-center">How it works</h2>
    <div class="cards">
      <div class="card">
        <%= image_tag("search.jpg", :alt => "search") %>
        <h4>Browse</h4>
        <p>Browse watches!!!</p>
      </div>
      <div class="card">
        <%= image_tag("subscribe.jpg", :alt => "subscribe") %>
        <h4>Subscribe</h4>
        <p>Become a member</p>
      </div>
      <div class="card">
        <%= image_tag("rent.jpg", :alt => "rent") %>
        <h4>Rent a watch</h4>
        <p>Yeah just that</p>
      </div>
    </div>
  </div>
</div>
